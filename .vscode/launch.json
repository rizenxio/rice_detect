{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask",
            "type": "debugpy",
            "request": "launch",
              // Jika menggunakan virtual environment
            "python": "C:\\Users\\bahbah\\AppData\\Local\\Programs\\Python\\Python310\\python.exe",  // Jika menggunakan Python global
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=5000"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Flask (Debug)",
            "type": "debugpy",
            "request": "launch",
           // Jika menggunakan virtual environment
            "python": "C:\\Users\\bahbah\\AppData\\Local\\Programs\\Python\\Python310\\python.exe",  // Jika menggunakan Python global
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1",
                "FLASK_ENV": "development"
            },
            "args": [
                "run",
                "--host=0.0.0.0",
                "--port=5000"
            ],
            "jinja": true,
            "justMyCode": false
        }
    ]
}